---
/**
 * About Section
 * Содержит заголовок «Наш центр» с описанием
 * и сетку из 8 карточек направлений
 */

const directions = [
  {
    num: '01',
    title: 'Психосоматические\nрасстройства',
    image: '/images/directions/direction-01.png',
  },
  {
    num: '02',
    title: 'Фобии\nи панические атаки',
    image: '/images/directions/direction-02.png',
  },
  {
    num: '03',
    title: 'Зависимости',
    image: '/images/directions/direction-03.png',
  },
  {
    num: '04',
    title: 'Расстройства\nсна и пищевого\nповедения',
    image: '/images/directions/direction-04.png',
  },
  {
    num: '05',
    title: 'Тревожные\nсостояния\nи депрессии',
    image: '/images/directions/direction-05.png',
  },
  {
    num: '06',
    title: 'Переживание\nрасставания\nи утраты близкого',
    image: '/images/directions/direction-06.png',
  },
  {
    num: '07',
    title: 'Создание лучшей\nверсии себя, поиск\nпредназначения',
    image: '/images/directions/direction-07.png',
  },
  {
    num: '08',
    title: 'Паттерны поведения,\nограничивающие\nразвитие и рост',
    image: '/images/directions/direction-08.png',
  },
]
---

<section class="about" id="about">
  <!-- About Header -->
  <div class="about__header container">
    <h2 class="about__title">Наш центр</h2>
    <p class="about__description">
      Это объединение профессионалов, оказывающих помощь в решении сложных психо-физиологических проблем
    </p>
  </div>

  <!-- Directions Grid -->
  <div class="about__directions container">
    <h4 class="about__directions-title">Список направлений</h4>
    
    <div class="directions-grid">
      {directions.map((item) => (
        <div class="direction-card">
          <img 
            src={item.image} 
            alt="" 
            class="direction-card__bg"
            loading="lazy"
          />
          <span class="direction-card__num">{item.num}</span>
          <p class="direction-card__title">{item.title}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .about {
    background: white;
    border-radius: 48px 48px 0 0;
    margin-top: -48px;
    position: relative;
    z-index: 10;
    padding-top: 50px;
    padding-bottom: 50px;
  }

  .about__header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 5rem;
  }

  @media (min-width: 768px) {
    .about__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      gap: 2rem;
    }
  }

  .about__title {
    color: var(--color-dark-soft);
    font-size: clamp(40px, 5vw, 65px);
    font-weight: 700;
    line-height: 1;
    letter-spacing: -0.01em;
    text-transform: uppercase;
    margin: 0;
  }

  .about__description {
    color: var(--color-dark-soft);
    font-size: 1.125rem;
    line-height: 1.17;
    max-width: 445px;
    margin: 0;
  }

  @media (min-width: 768px) {
    .about__description {
      font-size: 1.25rem;
    }
  }

  /* Directions */
  .about__directions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .about__directions-title {
    color: var(--color-dark-soft);
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 800;
    line-height: 0.875;
    letter-spacing: -0.01em;
    text-transform: uppercase;
    text-align: center;
    margin: 0;
  }

  .directions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
    width: 100%;
    max-width: 981px;
  }

  @media (min-width: 640px) {
    .directions-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .directions-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Direction Card */
  .direction-card {
    position: relative;
    aspect-ratio: 239 / 375;
    border-radius: 20px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px 16px;
    background: #FBFBFB;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .direction-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  }

  .direction-card__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .direction-card__num {
    position: relative;
    z-index: 1;
    color: white;
    font-size: clamp(40px, 6vw, 65px);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.01em;
    text-transform: uppercase;
  }

  .direction-card__title {
    position: relative;
    z-index: 1;
    color: white;
    font-size: clamp(12px, 1.5vw, 20px);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.01em;
    text-transform: uppercase;
    white-space: pre-line;
    margin: 0;
  }
</style>

