---
/**
 * Footer Section
 * Подвал с контактами, навигацией и юридической информацией
 */

const menuItems = [
  { label: 'О центре', href: '#about' },
  { label: 'Услуги', href: '#services' },
  { label: 'Обучение гипнозу', href: '#training' },
  { label: 'Отзывы', href: '#reviews' },
  { label: 'Эксперты', href: '#experts' },
  { label: 'Цены', href: '#courses' },
  { label: 'Частые вопросы', href: '#faq' },
]
---

<footer class="footer">
  <div class="footer__container">
    <!-- Logo -->
    <img 
      src="/images/logo.png" 
      alt="ЦЕРГ" 
      width="182" 
      height="49"
      class="footer__logo"
    />

    <!-- Navigation -->
    <nav class="footer__nav">
      {menuItems.map((item) => (
        <a href={item.href} class="footer__nav-link">
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Contacts -->
    <div class="footer__contacts">
      <a href="tel:+79114721704" class="footer__contact">
        <svg class="footer__contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        <span>+7 (911) 472-17-04</span>
      </a>
      
      <a href="mailto:helpcerh@mail.ru" class="footer__contact">
        <svg class="footer__contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
