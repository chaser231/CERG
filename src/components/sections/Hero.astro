---
interface Props {
  title?: string
  description?: string
}

const { 
  title = 'Центр\nрегрессивного\nгипноза',
  description = 'Помогаем адаптировать психические и физические реакции к негативным раздражителям в повседневной жизни, что приводит к внутреннему равновесию и здоровому пофигизму'
} = Astro.props

// Split title into lines for proper rendering
const titleLines = title.split('\n')
---

<section class="relative min-h-screen flex flex-col justify-end pb-16 md:pb-24 lg:pb-32 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 -z-10">
    <img 
      src="/images/hero/hero-image.png" 
      alt="" 
      class="w-full h-full object-cover object-center"
      loading="eager"
    />
    <!-- Gradient overlay for better text readability -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="container">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8 lg:gap-16">
      
      <!-- Left: Title -->
      <div class="flex-shrink-0">
        <h1 class="text-white leading-[0.86] tracking-tight">
          {titleLines.map((line, i) => (
            <span class="block">
              {line}
            </span>
          ))}
        </h1>
      </div>

      <!-- Right: Description + Buttons -->
      <div class="flex flex-col gap-5 lg:max-w-[524px]">
        
        <!-- Description Box -->
        <div class="bg-white/5 backdrop-blur-sm rounded-[20px] p-4">
          <p class="text-white text-base md:text-xl leading-snug">
            {description}
          </p>
        </div>

        <!-- Buttons -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 h-auto sm:h-[148px]">
          
          <!-- Primary Button -->
          <a 
            href="#contact" 
            class="group relative flex flex-col justify-between p-4 bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] rounded-[16px] transition-colors min-h-[120px] sm:min-h-0"
          >
            <!-- Arrow Icon -->
            <div class="flex justify-end">
              <div class="w-10 h-10 flex items-center justify-center bg-white/20 rounded-full group-hover:bg-white/30 transition-colors">
                <img 
                  src="/images/icons/icon-arrow.svg" 
                  alt="" 
                  width="13" 
                  height="13"
                  class="w-3 h-3"
                />
              </div>
            </div>
            
            <!-- Text -->
            <span class="text-white text-xl md:text-[28px] font-extrabold uppercase leading-[0.86] tracking-tight">
              Записаться<br />на консультацию
            </span>
          </a>

          <!-- Secondary Button -->
          <a 
            href="#training" 
            class="group relative flex flex-col justify-between p-4 bg-[#E5E5E5] hover:bg-[#D5D5D5] rounded-[20px] transition-colors min-h-[120px] sm:min-h-0"
          >
            <!-- Arrow Icon -->
            <div class="flex justify-end">
              <div class="w-10 h-10 flex items-center justify-center bg-black/10 rounded-full group-hover:bg-black/20 transition-colors">
                <img 
                  src="/images/icons/icon-arrow.svg" 
                  alt="" 
                  width="13" 
                  height="13"
                  class="w-3 h-3 invert"
                />
              </div>
            </div>
            
            <!-- Text -->
            <span class="text-black text-xl md:text-[28px] font-extrabold uppercase leading-[0.86] tracking-tight">
              Узнать<br />об обучении
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive title sizes */
  h1 {
    font-size: clamp(48px, 10vw, 110px);
  }
  
  /* Ensure proper spacing for header */
  section {
    padding-top: 100px;
  }
  
  @media (min-width: 1024px) {
    section {
      padding-top: 120px;
    }
  }
</style>

